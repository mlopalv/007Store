<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>
      <main>

        <form action="/products/savenew" method="POST" class="formProductCreate" enctype="multipart/form-data">
          <h3 class="headerDescripcionDelProducto">Registro de nuevo producto</h3>
          <input type="text" name="nombre" placeholder="Nombre del producto" class="formProductCreateEditTextInput">
          <br>
          <textarea id="story" name="descripcion" rows="12" class="formProductCreateEditTextInput"
            placeholder="DescripciÃ³n del producto">
            </textarea>
          <br>
          <input type="number" name="costo" class="formProductCreateEditTextInput" placeholder="Costo del producto">
          <br>
          <select name="categoria_id" id="listadoCategorias" class="formProductCreateEditTextInput" required>
            <option value="" class="formProductCreateEditTextInput" disabled selected>- seleccione categoria - </option>
            <% allCategories.forEach ( categoria=> { %>
              <option value="<%= categoria.id %>" class="formProductCreateEditTextInput">
                <%= categoria.description %>
              </option>
              <% }); %>
          </select>
          <h3>Foto del producto</h3>
          <!--<img src="/images/productos/logo-2.png" class="imagenAdicionalDelProducto" />-->
          <img src="/images/logo-2.png" />
          <input type="hidden" name="oldImage" value="/images/logo-2.png">
          <input type="file" name="imagenProducto" id="image" class="formProductCreateEditTextInput"
            value="/images/logo-2.png">
          <br>
          <br>
          <button type="submit">Enviar</button><br>
          <button type="reset">Borrar</button><br>
        </form>
      </main>
      <%- include('./partials/footer') %>
      <script src="/js/productCreate.js"></script>    
  </body>

</html>